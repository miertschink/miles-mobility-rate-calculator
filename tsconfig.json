{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es6"
    ],
    "allowImportingTsExtensions": true,
    "module": "esnext",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
